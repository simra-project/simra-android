<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".activities.RidesActivity">


    <LinearLayout
        android:id="@+id/rows"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/calendarIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_today_black_24dp" />
            <TextView
                android:id="@+id/row_icons_ride_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:paddingHorizontal="3dp"
                android:text="18/03/2019"
                android:textAlignment="viewStart"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />

            <ImageView
                android:id="@+id/durationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_timer_black_24dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20">

                <TextView
                    android:id="@+id/row_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:text="18"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall" />

                <TextView
                    android:id="@+id/row_durationMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="min"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clockIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_access_time_black_24dp" />
            <TextView
                android:id="@+id/row_ride_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:paddingHorizontal="3dp"
                android:text="11:40h"
                android:textAlignment="viewStart"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
            <ImageView
                android:id="@+id/distanceIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/route"
                android:backgroundTint="@color/black" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20">


                <TextView
                    android:id="@+id/row_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:text="18"
                    android:textAlignment="viewEnd"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall" />

                <TextView
                    android:id="@+id/row_distanceKM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="km"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="3dp">


        <ImageButton
            android:id="@+id/statusBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp" />

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/ic_menu_delete"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>